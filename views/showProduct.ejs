<style>
    body{margin:0;}
    .maincontainer{
       
        width:100%;
        height:90%;
        display:flex;
        justify-content: center;
        align-items:center;
    }
    .box{
        width:60%;
        height:auto;
        background:#fff;
        border-radius:10px;
        padding:15px;
        border: 1px solid grey;
    }
    .heading{
        display:flex;
        flex-direction: row;
        align-items: center;
        
    }
    .headingstyle{
        margin-left: 10px;
        font-size: 18px;
        font-weight: bold;
    }
    .btnsize{
        margin-top: 5px;
        width: 80%;
    }
    .image{
        width: 80px;
    }
</style>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="/javascripts/project.js"></script>

    </head>
    <form action="/food/update_food" method="post" >
        <input type="hidden" value="<%=data.food_id %>" name="food_id" />
<div  class="maincontainer">
    <div class="box">
        <div class="row">
            <div class="col-12">
                <div class="heading">
                    <div style="display: flex; align-items: center;">
                        <img src="/images/images.png" width="80">
                        <div class="headingstyle">Food Update</div>
                    </div>
                    <div style="margin-left: auto;">
                        <a href="/food/displayallfood"><img class="image" src="/images/display.png" /></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top: 10;">
            <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5;">
                <select class="form-select" name="category_id" id="category_id">
                    <option selected value="<%=data.category_id%>"><%=data.categoryname%></option>
                    
                  </select>
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5;">
                <select class="form-select" name="subcategory_id" id="subcategory_id">
                    <option selected value="<%=data.subcategory_id%>"><%=data.subcategoryname%></option>
                    
                  </select>
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5;">
                    <input type="text" class="form-control" name="foodname" value="<%=data.foodname%>" id="foodname" placeholder="Food Name">
                  
            </div>
        </div>
        <div class="row" style="margin-top: 5;">
            <div class="col-lg-12">
                <textarea class="form-control" name="ingrediennts" id="ingrediennts" rows="2"><%=data.ingrediennts%></textarea>
            </div>
        </div>
        <div class="row" style="margin-top: 10;">
            <div class="col-lg-12">
                <textarea class="form-control"  name="description" id="description" rows="2"><%=data.description%></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-lg-6" style="margin-top: 10;">
                <input type="text" class="form-control" value="<%=data.price%>" name="price" placeholder="Price">
              
        </div> 
          <div class="col-xs-12 col-sm-12 col-lg-6" style="margin-top: 10;">
            <input type="text" class="form-control" name="offerprice" value="<%=data.offerprice%>" placeholder="Offer-Price">
          </div> 
        </div>
        <div class="row" style="margin-top: 10;">
            <div class="col-xs-12 col-sm-12 col-lg-3" style="display: flex; justify-content: center; align-items: center;">
                <div class="form-check form-check-inline">
                    <input <%if(data.foodtype=="Veg"){ %> checked <% } %> class="form-check-input" type="checkbox" id="foodtype" value="Veg" name="foodtype">
                    <label class="form-check-label" for="foodtype">Veg</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input <%if(data.foodtype=="Non-Veg"){ %> checked <% } %> class="form-check-input" type="checkbox" id="foodtype" value="Non-veg" name="foodtype">
                    <label class="form-check-label" for="foodtype">Non-Veg</label>
                  </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-3" style="margin-top: 5;">
                <select class="form-select" name="status" id="status">
                    <option selected ><%=data.status%></option>
                    <option value="Continue">Continue</option>
                    <option value="Discontinue">Discontinue</option>
                    
                  </select>  
            </div>
            
        </div>
        <div class="row" style="margin-top: 10;">
            <div class="col-xs-12 col-sm-12 col-lg-6" style="display: flex; justify-content: center;" >
                <button type="submit" name="btn" value="Edit" class="btn btn-primary btnsize">Edit</button>
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-6 " style="display: flex; justify-content: center;">
        <button type="submit" name="btn" value="Delete" class="btn btn-primary btnsize">Delete</button>
            </div>
        </div>
        <div class="row" style="margin: top 10px; ">
            <div class="col-xs-12 col-sm-12 col-lg-12" style="display: flex; justify-content: center;">
             
            </div>
        </div>
    </div>
</div>
    </form>
</html>