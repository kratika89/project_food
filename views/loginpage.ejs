    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
</head>

<body>
    <form action="/admin/check_login" method="post">
    <div class="main">
        <div class="poster d-none d-md-block">
            <img class="image" src="/images/poster.png">
        </div>
        <div class="login">
            <div class="icon">
                <img class="pic" src="/images/lock.png">
            </div>
            <div class="info">
                <h3>ADMIN LOGIN</h3><br>
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-6 one">
                <input type="text" class="form-control" name="emailid" id="email" placeholder="Email">
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-6 two">
                <input type="password" class="form-control" name="password" id="password" placeholder="Password">
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-12 three">
                <button type="submit" class="btn btn-primary btnsize">Login</button>
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-12" style="font-weight: bold; display: flex;justify-content: center;">
               <%=message%>
            </div>
        </div>
    </div>
</form>
</body>

