<style>
    body {
        margin: 0;
    }

    .maincontainer {

        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .box {
        width: 80%;
        height: auto;
        background: #fff;
        border-radius: 10px;
        padding: 15px;
        margin-top: 10px;
        border: 1px solid grey;
    }

    .heading {
        display: flex;
        flex-direction: row;
        align-items: center;

    }

    .headingstyle {
        margin-left: 10px;
        font-size: 18px;
        font-weight: bold;
    }

    .btnsize {
        margin-top: 5px;
        width: 80%;
    }

    .pic {
        width: 70px;
        height: 70px;
        border-radius: 40;
    }

    .image {
        width: 80px;
    }
</style>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
</head>

<body>
    <div class="maincontainer">
        <div class="box">
            <div class="heading">
                <div style="display: flex; align-items: center;">
                    <img src="/images/images.png" width="80">
                    <div class="headingstyle">List of Foods</div>
                </div>
                <div style="margin-left: auto;">
                    <a href="/food/food_interface"><img class="image" src="/images/add.png" /></a>
                </div>
            </div>
            <table class="table">
                <tr>
                    <th>Sn</th>
                    <th>Food Id</th>
                    <th>Category</th>
                    <th>Food Name</th>
                    <th>Ingredients
                    </th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Food Picture</th>
                    <th>Edit</th>

                </tr>
                <% data.map((item,i)=>{
                    %>
                    <tr>
                        <td>
                            <%=i+1%>
                        </td>
                        <td>
                            <%=item.food_id%>
                        </td>
                        <td>
                            <%=item.categoryname%><br>
                                <%=item.subcategoryname%>
                        </td>
                        <td>
                            <%=item.foodname%>(<%=item.foodtype%>)
                        </td>
                        <td>
                            <%=item.ingrediennts%>
                        </td>
                        <td>
                            <%=item.description%>
                        </td>
                        <td><s>
                                <%=item.price%>
                            </s><br>
                            <%=item.offerprice%>
                        </td>
                        <td>
                            <%=item.status%>
                        </td>
                        <td><a
                                href="/food/show_picture?food_id=<%=item.food_id%>&foodname=<%=item.foodname%>&foodpicture=<%=item.foodpicture%>"><img
                                    class="pic" src='/images/<%=item.foodpicture%>' /></a></td>
                        <td><a href="/food/show_product?food_id=<%=item.food_id%>"><button type="submit"
                                    class="btn btn-primary">Update</button></a></td>
                    </tr>

                    <% }) %>


            </table>
        </div>
    </div>
</body>


</html>